workflows:
  ios-workflow:
    name: iOS Workflow
    environment:
      ios_signing:
        provisioning_profiles:
          - Shift7_Distribute_Certificate
        certificates:
          - Visual_Distribute_Certificate
    integrations:
      app_store_connect: moy

    scripts:
      - name: Get Flutter packages
        script: |
          flutter clean
          flutter pub get

      - name: Clean iOS Pods
        script: |
          cd ios
          pod deintegrate
          rm -rf Pods Podfile.lock
          pod install --repo-update
          cd ..

      - name: Set up keychain
        script: |
          keychain initialize
          keychain add-certificates

      - name: Apply code signing
        script: |
          xcode-project use-profiles

      - name: Flutter build IPA
        script: |
          flutter build ipa --release \
          --build-name=1.0.0 \
          --build-number=1

    artifacts:
      - build/ios/ipa/*.ipa

    publishing:
      app_store_connect:
        auth: integration
        submit_to_testflight: true
        beta_groups:
          - tester
